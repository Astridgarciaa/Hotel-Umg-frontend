@model Hotel_Umg_Frontend.Controllers.EmpleadoController.Respuesta

<div class="container d-flex mb-5">
    <div class="page-header d-flex w-100 justify-content-between">
        <h1>Empleados</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#crearModal">
            Nuevo Empleado
        </button>
    </div>
</div>

<!-- Crear -->
<div class="modal fade" id="crearModal" tabindex="-1" aria-labelledby="crearModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="crearModalLabel">Crear un nuevo Empleado</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Crear", "Empleado", FormMethod.Post))
                {
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombres</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required>
                    </div>

                    <div class="mb-3">
                        <label for="apellido" class="form-label">Apellidos</label>
                        <input type="text" class="form-control" id="apellido" name="apellido" required>
                    </div>

                    <div class="mb-3">
                        <label for="cargo" class="form-label">Cargo que ocupará</label>
                        <input type="text" class="form-control" id="cargo" name="cargo" required>
                    </div>


                    <div class="mb-3">
                        <label for="salario" class="form-label">Salario a devenger</label>
                        <input type="number" class="form-control" id="salario" name="salario" required>
                    </div>

                    <div class="mb-3">
                        <label for="fechaContratacion" class="form-label">Fecha de contratación</label>
                        <input type="date" class="form-control" id="fechaContratacion" name="fechaContratacion" required>
                    </div>

                    <div class="mb-3">
                        <label for="idHotel" class="form-label">Hotel</label>
                        <select class="form-control" id="idHotel" name="idHotel">
                            @if (Model.hoteles.Count > 0)
                            {
                                foreach (var hotel in Model.hoteles)
                                {
                                    <option value="@hotel.idHotel">@hotel.idHotel</option>
                                }
                            }

                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="panel panel-default">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Cargo</th>
                    <th>Salario</th>
                    <th>fecha Contrat.</th> 
                    <th>Id_Hotel</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.empleados.Count > 0)

                {
                    foreach (var empleado in Model.empleados)
                    {
                        <tr>
                            <td>@empleado.idEmpleado</td>
                            <td>@empleado.nombre</td>
                            <td>@empleado.apellido</td>
                            <td>@empleado.cargo</td>
                            <td>@empleado.salario</td>
                            <td>@empleado.fechaContratacion</td>
                            <td>@empleado.idHotel</td>

                            <td>
                                <button type="button" class="btn btn-primary btn-xs" data-bs-toggle="modal" data-bs-target="#editarModal-@empleado.idEmpleado"><span class="glyphicon glyphicon-edit"></span> Editar</button>
                                <button type="button" class="btn btn-danger btn-xs" data-bs-toggle="modal" data-bs-target="#eliminarModal-@empleado.idEmpleado"><span class="glyphicon glyphicon-remove-circle"></span> Eliminar</button>
                            </td>
                        </tr>



                        <!-- Editar Modal-->
                        <div class="modal fade" id="editarModal-@empleado.idEmpleado" tabindex="-1" aria-labelledby="editarModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="editarModalLabel">Editar Empleado</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        @using (Html.BeginForm("Editar", "Empleado", FormMethod.Post))
                                        {
                                            @Html.Hidden("idEmpleado", empleado.idEmpleado)
                                            @Html.Hidden("idHotel", empleado.idHotel)
                                            <div class="mb-3">
                                                <label for="nombre" class="form-label">Nombre de Empleado</label>
                                                <input type="text" class="form-control" id="nombre" name="nombre" value="@empleado.nombre" required readonly>
                                            </div>

                                            <div class="mb-3">
                                                <label for="apellido" class="form-label">Apellidos</label>
                                                <input type="text" class="form-control" id="apellido" name="apellido" value="@empleado.apellido" required>
                                            </div>

                                            <div class="mb-3">
                                                <label for="cargo" class="form-label">Cargo</label>
                                                <input type="text" class="form-control" id="cargo" name="cargo" value="@empleado.cargo" required>
                                            </div>
                                            <div class="mb-3">
                                                <label for="salario" class="form-label">Salario Devengado</label>
                                                <input type="number" class="form-control" id="salario" name="salario" value="@empleado.salario" required readonly>
                                            </div>
                                            <div class="mb-3">
                                                <label for="fechaContratacion" class="form-label">Fecha de Contratacion</label>
                                                <input type="date" class="form-control" id="fechaContratacion" name="fechaContratacion" value="@empleado.fechaContratacion" required readonly>
                                            </div>

                                            <div class="mb-3">
                                                <label for="idHotel" class="form-label">ID de Hotel</label>
                                                <input type="number" class="form-control" id="idHotel" name="idHotel" value="@empleado.idHotel" required readonly>
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                <button type="submit" class="btn btn-primary">Guardar</button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Eliminar Modal -->
                        <div class="modal fade" id="eliminarModal-@empleado.idEmpleado" tabindex="-1" aria-labelledby="eliminarModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="eliminarModalLabel">Eliminar Empleado</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        @using (Html.BeginForm("Eliminar", "Empleado", FormMethod.Post))
                                        {
                                            @Html.Hidden("idEmpleado", empleado.idEmpleado)
                                            <p>¿Está seguro que desea eliminar al Empleado <strong>@empleado.nombre</strong>?</p>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                <button type="submit" class="btn btn-danger">Eliminar</button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center">No hay Empleados registrados.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
